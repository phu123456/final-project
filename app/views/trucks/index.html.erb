<h1>Listing Trucks</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <!-- <th>Bulker</th> -->
      <th>ทะเบียนรถ</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trucks.each do |truck| %>
      <tr>
        <!-- <td><%= truck.bulker %></td> -->
        <td><%= truck.plate %></td>
        <td class="table-bordered"><%= link_to 'ดูข้อมูล', truck %></td>
        <td class="table-bordered"><%= link_to 'เพิ่มเที่ยว', edit_truck_path(truck) %></td>
        <td class="table-bordered"><%= link_to 'ลบ', truck, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

